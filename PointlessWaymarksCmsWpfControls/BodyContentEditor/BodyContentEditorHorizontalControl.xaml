<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.BodyContentEditor.BodyContentEditorHorizontalControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:bodyContentEditor="clr-namespace:PointlessWaymarksCmsWpfControls.BodyContentEditor"
    xmlns:contentFormat="clr-namespace:PointlessWaymarksCmsWpfControls.ContentFormat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:wpfBehavior="clr-namespace:PointlessWaymarksCmsWpfControls.Utility.WpfBehavior"
    xmlns:wpfConverter="clr-namespace:PointlessWaymarksCmsWpfControls.Utility.WpfConverter"
    xmlns:wpfHtml="clr-namespace:PointlessWaymarksCmsWpfControls.WpfHtml"
    d:DataContext="{d:DesignInstance bodyContentEditor:BodyContentEditorContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <wpfConverter:BooleanNotToVisibilityConverter x:Key="BooleanNotToVisibility" />
            <utility:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Style="{StaticResource UiComponentGroupBoxStyle}">
            <GroupBox.Header>
                <Label Style="{StaticResource DataEntryLabelStyle}">Format</Label>
            </GroupBox.Header>
            <WrapPanel Orientation="Horizontal">
                <contentFormat:ContentFormatChooserControl DataContext="{Binding BodyContentFormat}" />
                <Label
                    Margin="12,0,0,0"
                    Style="{StaticResource DataEntryLabelStyle}"
                    Target="{Binding ElementName=BodyMarkDownFontSizeSlider}">
                    Font Size
                </Label>
                <Slider
                    x:Name="BodyMarkDownFontSizeSlider"
                    Width="120"
                    VerticalAlignment="Center"
                    Maximum="42"
                    Minimum="8"
                    Value="14" />
            </WrapPanel>
        </GroupBox>
        <Grid Grid.Row="1" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <GroupBox Style="{StaticResource UiComponentGroupBoxStyle}">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Label Style="{StaticResource DataEntryLabelStyle}" Target="{Binding ElementName=BodyContentTextBox}">
                                Content
                            </Label>
                            <utility:IndicatorIcon
                                VerticalAlignment="Center"
                                HoverText="Content Has Changes"
                                IconBrush="Black"
                                IconPathGeometry="{StaticResource IconDataInfo}"
                                IconSize="{StaticResource SmallIconSize}"
                                Visibility="{Binding BodyContentHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                        </StackPanel>
                    </GroupBox.Header>
                    <TextBox
                        x:Name="BodyContentTextBox"
                        wpfBehavior:TextBoxHelper.SelectedText="{Binding SelectedBodyText}"
                        AcceptsReturn="True"
                        BorderThickness="0"
                        FontSize="{Binding ElementName=BodyMarkDownFontSizeSlider, Path=Value}"
                        SpellCheck.IsEnabled="True"
                        Text="{Binding BodyContent, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Visible">
                        <b:Interaction.Behaviors>
                            <wpfBehavior:TextBoxDoubleClickLauncher />
                        </b:Interaction.Behaviors>
                    </TextBox>
                </GroupBox>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button HorizontalAlignment="Right" Command="{Binding RemoveLineBreaksFromSelectedCommand}">
                        Selected - Line Breaks to Spaces
                    </Button>
                </StackPanel>
            </Grid>
            <GridSplitter
                Grid.Row="1"
                Height="6"
                Margin="0,6,0,6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="#EEEEEE"
                ShowsPreview="True" />
            <GroupBox Grid.Row="2" Style="{StaticResource UiComponentGroupBoxStyle}">
                <GroupBox.Header>
                    <Label Style="{StaticResource DataEntryLabelStyle}" Target="{Binding ElementName=BodyContentWebView}">
                        Preview
                    </Label>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button
                        Height="24"
                        Margin="0,0,0,4"
                        Command="{Binding RefreshPreviewCommand}">
                        Refresh Preview
                    </Button>
                    <wpf:WebView2
                        x:Name="BodyContentWebView"
                        Grid.Row="1"
                        Visibility="{Binding StatusContext.BlockUi, Converter={StaticResource BooleanNotToVisibility}}">
                        <b:Interaction.Behaviors>
                            <wpfHtml:WebViewHtmlStringBindingBehavior HtmlString="{Binding BodyContentHtmlOutput}" />
                            <wpfHtml:WebViewRedirectLinksToBrowser />
                            <wpfHtml:WebViewSelectedTextBehavior WebViewSelectedText="{Binding UserHtmlSelectedText}" />
                        </b:Interaction.Behaviors>
                    </wpf:WebView2>
                    <Button
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        Command="{Binding SpeakSelectedTextCommand}">
                        Read Selected
                    </Button>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
