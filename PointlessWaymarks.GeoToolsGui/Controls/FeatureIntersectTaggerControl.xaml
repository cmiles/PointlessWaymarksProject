<UserControl x:Class="PointlessWaymarks.GeoToolsGui.Controls.FeatureIntersectTaggerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utility="clr-namespace:PointlessWaymarks.WpfCommon.Utility;assembly=PointlessWaymarks.WpfCommon"
             xmlns:fileList="clr-namespace:PointlessWaymarks.WpfCommon.FileList;assembly=PointlessWaymarks.WpfCommon"
             xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
             xmlns:controls="clr-namespace:PointlessWaymarks.GeoToolsGui.Controls"
             xmlns:models="clr-namespace:PointlessWaymarks.GeoToolsGui.Models"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance controls:FeatureIntersectTaggerContext}">
    <UserControl.Resources>
        <ResourceDictionary>
            <utility:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTab, Mode=TwoWay}">
            <TabItem Header="Files To Tag">
                <Grid>
                    <GroupBox Header="Files To Tag" Margin="4">
                        <Grid Margin="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Margin="4" HorizontalAlignment="Center" TextWrapping="Wrap">Use the buttons below to add all files in a Directory, all files in a Directory and all Subdirectories or to pick Files that will be compared to the GPX/location information in the previous tab. You can also delete items in the list below.</TextBlock>
                            <fileList:FileListControl DataContext="{Binding FilesToTagFileList}" Grid.Row="1" Margin="4" />
                        </Grid>
                    </GroupBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Margin="0,8,12,0">
                        <Button Command="{Binding GeneratePreviewCommand}" Width="240" Margin="0,0,3,0">Generate Preview - Current Settings</Button>
                        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="240" Margin="3,0,0,0"
                                Command="{Binding NextTabCommand}">
                            Next - PAD-US Settings ->
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="PAD-US">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox Header="PAD-US Settings" Margin="4">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border Margin="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                <StackPanel Margin="4" Orientation="Vertical">
                                    <Label>PAD-US GeoJson Data Directory</Label>
                                    <TextBox Margin="4" Text="{Binding Settings.PadUsDirectory}" />
                                    <Button Margin="8" Command="{Binding ChoosePadUsDirectoryCommand}">Select PAD-US Directory</Button>
                                </StackPanel>
                            </Border>
                            <Border Margin="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2"
                                    Grid.Column="1">
                                <StackPanel Margin="4" Orientation="Vertical">
                                    <Label>Attributes for Tags</Label>
                                    <ListBox Margin="4" Height="80" ItemsSource="{Binding Settings.PadUsAttributes}"
                                             SelectedItem="{Binding SelectedPadUsAttribute}"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                                    <Grid Margin="6,4,6, 4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Text="{Binding .}" />
                                                        <Button VerticalContentAlignment="Center" Width="24"
                                                                VerticalAlignment="Center" Grid.Column="1"
                                                                Margin="6,0,0,0"
                                                                Command="{Binding Data.RemovePadUsAttributeCommand, Source={StaticResource Proxy}}"
                                                                CommandParameter="{Binding .}">
                                                            x
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Margin="4"
                                                 Text="{Binding PadUsAttributeToAdd, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="1" Margin="4" Command="{Binding AddPadUsAttributeCommand}">Add Attribute</Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="PAD-US Help and Instructions" Grid.Row="1" Margin="4,0,4,4">
                        <wpf:MarkdownViewer Margin="4" Markdown="{Binding PadUsOverviewMarkdown}" />
                    </GroupBox>
                    <Button Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="240"
                            Margin="0,8,12,0"
                            Command="{Binding NextTabCommand}">
                        Next - GeoJson Feature Files ->
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="GeoJson Feature Files">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <GroupBox Header="GeoJson Feature Files" Margin="4">
                        <Grid Margin="4">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ListBox ItemsSource="{Binding Settings.FeatureIntersectFiles}"
                                     SelectedItem="{Binding SelectedFeatureFile}"
                                     SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     HorizontalContentAlignment="Stretch" ScrollViewer.CanContentScroll="False">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:FeatureFileViewModel}">
                                        <Grid Margin="4" HorizontalAlignment="Stretch">
                                            <Grid Margin="4,0,0,0">
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock" x:Key="FeatureTextBlock">
                                                        <Setter Property="Margin" Value="12,0,0,4" />
                                                        <Setter Property="TextWrapping" Value="Wrap" />
                                                    </Style>
                                                    <Style TargetType="Label" x:Key="BoldLabel">
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                    </Style>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Vertical" Margin="4,4, 16,12">
                                                    <Label Style="{StaticResource BoldLabel}">Name</Label>
                                                    <TextBlock Style="{StaticResource FeatureTextBlock}"
                                                               Text="{Binding Name}" />
                                                    <Label Style="{StaticResource BoldLabel}">File</Label>
                                                    <TextBlock Style="{StaticResource FeatureTextBlock}"
                                                               Text="{Binding FileName}" />
                                                    <Label Style="{StaticResource BoldLabel}">Source</Label>
                                                    <TextBlock Style="{StaticResource FeatureTextBlock}"
                                                               Text="{Binding Source}" />
                                                </StackPanel>
                                                <StackPanel Margin="4,8,4,8" Orientation="Vertical" Grid.Column="1">
                                                    <Label Style="{StaticResource BoldLabel}">Attributes for Tags</Label>
                                                    <ListBox Background="Transparent" Margin="2"
                                                             ItemsSource="{Binding AttributesForTags}">
                                                        <ListBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel IsItemsHost="True"
                                                                           Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ListBox.ItemsPanel>
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Margin="2">
                                                                    <TextBlock VerticalAlignment="Center"
                                                                               Text="{Binding .}" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                    <Label Style="{StaticResource BoldLabel}">Tag All With</Label>
                                                    <TextBlock Style="{StaticResource FeatureTextBlock}"
                                                               Text="{Binding TagAll}" />

                                                    <Label Style="{StaticResource BoldLabel}">Downloaded On</Label>
                                                    <TextBlock Style="{StaticResource FeatureTextBlock}"
                                                               Text="{Binding Downloaded}" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center"
                                       Margin="4,8,4,2">
                                <Button Height="30" Margin="2,0,2,0" Width="180"
                                        Command="{Binding NewFeatureFileCommand}">
                                    Add Feature
                                </Button>
                                <Button Height="30" Margin="2,0,2,0" Width="180"
                                        Command="{Binding DeleteFeatureFileCommand}">
                                    Delete Feature
                                </Button>
                                <Button Height="30" Margin="2,0,2,0" Width="180"
                                        Command="{Binding EditFeatureFileCommand}">
                                    Edit Selected Feature
                                </Button>
                            </WrapPanel>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="GeoJson Files Help and Instructions" Grid.Row="1" Margin="4,0,4,4">
                        <wpf:MarkdownViewer Margin="4" Markdown="{Binding GeoJsonFileOverviewMarkdown}" />
                    </GroupBox>
                    <controls:FeatureFileEditorControl Grid.Row="0" Grid.RowSpan="2"
                                                       DataContext="{Binding FeatureFileToEdit}" />
                    <Button Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="240"
                            Margin="0,8,12,0"
                            Command="{Binding NextTabCommand}">
                        Next - Settings ->
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <ScrollViewer>
                    <GroupBox Header="Settings and Start Preview" Margin="4">
                        <StackPanel>
                            <Button Command="{Binding GeneratePreviewCommand}" Height="40" Margin="8,8,8,12"
                                    HorizontalAlignment="Stretch">
                                Generate Preview
                            </Button>
                            <GroupBox Header="ExifTool">
                                <StackPanel Orientation="Vertical">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontWeight="Bold" VerticalAlignment="Center">Path and Filename:</TextBlock>
                                        <TextBox Grid.Column="1" Margin="12,0,8,0" VerticalAlignment="Center"
                                                 Text="{Binding Settings.ExifToolFullName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="2"
                                                   Visibility="{Binding ExifToolExists, Converter={StaticResource BooleanNotToVisibility}}"
                                                   FontWeight="Bold" Foreground="Red" FontSize="20" VerticalAlignment="Center"
                                                   Margin="8,0,8,0" ToolTip="ExifTool.exe Does Not Exist?">
                                            !
                                        </TextBlock>
                                    </Grid>
                                    <Button Command="{Binding ChooseExifFileCommand}" Margin="16,8,4,8" Width="240">Choose File</Button>
                                    <TextBlock TextWrapping="Wrap" Margin="4">This program writes tags to files using Phil Harvey's ExifTool - https://exiftool.org/. The recommended version of the program can be downloaded from https://oliverbetz.de/pages/Artikel/ExifTool-for-Windows - and the full path and filename must be entered above.</TextBlock>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="File Handling">
                                <StackPanel Orientation="Vertical" Margin="4">
                                    <CheckBox IsChecked="{Binding Settings.CreateBackups}" FontWeight="Bold">Create Backups</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">When Geolocation information is found for a file the original version will be copied into a backup directory.</TextBlock>
                                    <CheckBox Margin="24, 0,0,0" FontWeight="Bold"
                                              IsChecked="{Binding Settings.CreateBackupsInDefaultStorage}">
                                        Backup into My Documents
                                    </CheckBox>
                                    <TextBlock Margin="36,0,4,4" TextWrapping="Wrap">If this is checked backups will be written into a folder in My Documents - this keeps all backups in one place and doesn't add extra files into existing directories. If un-checked backups will be written to a folder under the file's current folder - this keeps the backups close to the original file.</TextBlock>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Tag Options">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical">
                                        <CheckBox IsChecked="{Binding Settings.TagsToLowerCase}" FontWeight="Bold">Tags to Lowercase</CheckBox>
                                        <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">If selected all tags will be converted into lowercase. (Note that when de-duplicating tags the program uses a case insensitive comparison - converting tags to lower case is an aesthetic/data consistency option.)</TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <CheckBox IsChecked="{Binding Settings.SanitizeTags}" FontWeight="Bold">Sanitize Tags</CheckBox>
                                        <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">This option will cause many characters to be eliminated from tags into a-z, 0-9 and a handful of other characters. This option offers a simple way to eliminate some inconsistencies that can easily occur in tags. This WILL transform any existing tags!</TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <CheckBox FontWeight="Bold"
                                                  IsChecked="{Binding Settings.TagSpacesToHyphens}">
                                            Spaces to Hyphens
                                        </CheckBox>
                                        <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">The 'Sanitize Tags' option will leave spaces in tags - this can be good for human interaction but does not make for nice web URLs - checking this option will cause spaces to be replaced by hyphens and tags will be transformed into URL appropriate slugs. In general this should not be checked for normal photo/tag processing, but in special cases this can be very useful! This WILL transform any existing tags!</TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Manage Settings">
                                <StackPanel Orientation="Vertical" Margin="4">
                                    <WrapPanel Orientation="Horizontal" Margin="12,8,4,6">
                                        <Button MinWidth="120" Margin="2,0,2,0"
                                                Command="{Binding SaveSettingsFromFileCommand}">
                                            Save Current Settings
                                        </Button>
                                        <Button MinWidth="120" Margin="2,0,2,0"
                                                Command="{Binding ImportSettingsFromFileCommand}">
                                            Import Settings
                                        </Button>
                                        <Button MinWidth="120" Margin="2,0,2,0"
                                                Command="{Binding ExportSettingsFromFileCommand}">
                                            Export Settings
                                        </Button>
                                    </WrapPanel>
                                    <TextBlock Margin="36,4,4,4" TextWrapping="Wrap">Save Settings: Settings are periodically saved by this program - most notably when you generate tags - you can use Save Settings at any time to ensure your changes are saved.</TextBlock>
                                    <TextBlock Margin="36,4,4,4" TextWrapping="Wrap">Import Settings: Use with care! This will overwrite all settings!</TextBlock>
                                    <TextBlock Margin="36,4,4,4" TextWrapping="Wrap">Export Settings: Use to create a file of settings that you can load later or use with the command line version of this program.</TextBlock>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </GroupBox>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Preview">
                <GroupBox Header="Preview">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Height="40" Margin="8,8,8,12" HorizontalAlignment="Stretch"
                                Command="{Binding WriteToFilesCommand}">
                            Write Tags to Files
                        </Button>
                        <DataGrid Grid.Row="1" ItemsSource="{Binding PreviewResults}" CanUserAddRows="False"
                                  CanUserReorderColumns="true"
                                  CanUserDeleteRows="false" CanUserResizeColumns="true" CanUserResizeRows="false"
                                  CanUserSortColumns="true" AutoGenerateColumns="false" FrozenColumnCount="1"
                                  IsReadOnly="true">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileToTag.FullName}" />
                                <DataGridTextColumn Header="Result" Binding="{Binding Result}" />
                                <DataGridTextColumn Header="New Tags" Binding="{Binding NewTagsString}" />
                                <DataGridTextColumn Header="Existing Tags" Binding="{Binding ExistingTagString}" />
                                <DataGridTextColumn Header="Final Tags" Binding="{Binding FinalTagString}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem Header="File Write Results">
                <GroupBox Header="Results">
                    <Grid>
                        <DataGrid ItemsSource="{Binding WriteToFileResults}" CanUserAddRows="False"
                                  CanUserReorderColumns="true"
                                  CanUserDeleteRows="false" CanUserResizeColumns="true" CanUserResizeRows="false"
                                  CanUserSortColumns="true" AutoGenerateColumns="false" FrozenColumnCount="1"
                                  IsReadOnly="true">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileToTag.FullName}" />
                                <DataGridTextColumn Header="Result" Binding="{Binding Result}" />
                                <DataGridTextColumn Header="New Tags" Binding="{Binding NewTagsString}" />
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" />
                                <DataGridTextColumn Header="Final Tags" Binding="{Binding FinalTagString}" />
                                <DataGridTextColumn Header="Existing Tags" Binding="{Binding ExistingTagString}" />
                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </GroupBox>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>