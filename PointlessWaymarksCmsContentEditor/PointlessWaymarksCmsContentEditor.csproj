    </PackageReference>
    <PackageReference Include="HtmlTableHelper" Version="1.2.2" />
    <PackageReference Include="HtmlTags" Version="8.0.0" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.2.0-eap" />
