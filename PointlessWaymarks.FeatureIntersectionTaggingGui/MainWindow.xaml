<Window x:Class="PointlessWaymarks.FeatureIntersectionTaggingGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointlessWaymarks.FeatureIntersectionTaggingGui"
        xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
        xmlns:fileList="clr-namespace:PointlessWaymarks.WpfCommon.FileList;assembly=PointlessWaymarks.WpfCommon"
        xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        xmlns:wpf1="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:wpfHtml="clr-namespace:PointlessWaymarks.WpfCommon.WpfHtml;assembly=PointlessWaymarks.WpfCommon"
        xmlns:valueConverters="clr-namespace:PointlessWaymarks.WpfCommon.ValueConverters;assembly=PointlessWaymarks.WpfCommon"
        xmlns:utility="clr-namespace:PointlessWaymarks.WpfCommon.Utility;assembly=PointlessWaymarks.WpfCommon"
        mc:Ignorable="d"
        Icon="FeatureIntersectionGuiIcon.ico"
        Title="{Binding InfoTitle}" Height="800" Width="900" d:DataContext="{d:DesignInstance local:MainWindow}">
    <Window.Resources>
        <ResourceDictionary>
            <valueConverters:BooleanNotToVisibilityConverter x:Key="BooleanNotToVisibility" />
            <utility:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTab, Mode=TwoWay}">
            <TabItem Header="Files to Tag">
                <Grid Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Margin="4" HorizontalAlignment="Center" TextWrapping="Wrap">Use the buttons below to add all files in a Directory, all files in a Directory and all Subdirectories or to pick Files that will be compared to the GPX/location information in the previous tab. You can also delete items in the list below.</TextBlock>
                    <fileList:FileListControl DataContext="{Binding FilesToTagFileList}" Grid.Row="1" Margin="4" />
                </Grid>
            </TabItem>
            <TabItem Header="PAD-US">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Header="PAD-US Settings" Margin="4">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border Margin="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                <StackPanel Margin="4" Orientation="Vertical">
                                    <Label>PAD-US GeoJson Data Directory</Label>
                                    <TextBox Margin="4" Text="{Binding PadUsDirectory}" />
                                    <Button Margin="8" Command="{Binding ChoosePadUsDirectoryCommand}">Select PAD-US Directory</Button>
                                </StackPanel>
                            </Border>
                            <Border Margin="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2"
                                    Grid.Column="1">
                                <StackPanel Margin="4" Orientation="Vertical">
                                    <Label>Attributes for Tags</Label>
                                    <ListBox Margin="4" Height="80" ItemsSource="{Binding PadUsAttributes}"
                                             SelectedItem="{Binding SelectedPadUsAttribute}"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                                    <Grid Margin="6,4,6, 4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Text="{Binding .}"></TextBlock>
                                                        <Button VerticalContentAlignment="Center" Width="24"
                                                                VerticalAlignment="Center" Grid.Column="1"
                                                                Margin="6,0,0,0"
                                                                Command="{Binding Data.RemovePadUsAttributeCommand, Source={StaticResource Proxy}}"
                                                                CommandParameter="{Binding .}">
                                                            x
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Margin="4"
                                                 Text="{Binding PadUsAttributeToAdd, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="1" Margin="4" Command="{Binding AddPadUsAttributeCommand}">Add Attribute</Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="PAD-US Help and Instructions" Grid.Row="1" Margin="4,0,4,4">
                        <wpf:MarkdownViewer Margin="4" Grid.Row="1" Markdown="{Binding PadUsOverviewMarkdown}" />
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="GeoJson Feature Files">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <GroupBox Header="GeoJson Feature Files" Margin="4">
                        <Grid Margin="4">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <ListBox ItemsSource="{Binding FeatureFiles}" SelectedItem="{Binding SelectedFeatureFile}"
                                     SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     HorizontalContentAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:FeatureFileEditorViewModel}">
                                        <Grid Margin="4">
                                            <Border BorderBrush="LightGray" BorderThickness="2" CornerRadius="4">
                                                <Grid Margin="4,0,0,0">
                                                    <Grid.Resources>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Margin" Value="12,0,0,4"></Setter>
                                                            <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                                        </Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                                        </Style>
                                                    </Grid.Resources>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Orientation="Vertical" Margin="4,4, 16,12">
                                                        <Label>File</Label>
                                                        <TextBlock
                                                            Text="{Binding FileName}" />
                                                        <Label>Name</Label>
                                                        <TextBlock Text="{Binding Name}" />
                                                        <Label>Source</Label>
                                                        <TextBlock Text="{Binding Source}" />
                                                    </StackPanel>
                                                    <StackPanel Margin="4,8,4,8" Orientation="Vertical" Grid.Column="1">
                                                        <Label>Attributes for Tags</Label>
                                                        <ListBox Margin="12,4,4,4" Height="60"
                                                                 ItemsSource="{Binding AttributesForTags}">
                                                            <ListBox.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel IsItemsHost="True"
                                                                               Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </ListBox.ItemsPanel>
                                                            <ListBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border BorderBrush="LightGray" BorderThickness="1"
                                                                            CornerRadius="2">
                                                                        <Grid Margin="6,2,6,2">
                                                                            <TextBlock VerticalAlignment="Center"
                                                                                Text="{Binding .}">
                                                                            </TextBlock>
                                                                        </Grid>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ListBox.ItemTemplate>
                                                        </ListBox>
                                                        <Label>Tag All With</Label>
                                                        <TextBlock Text="{Binding TagAll}" />
                                                        
                                                        <Label>Downloaded On</Label>
                                                        <TextBlock Text="{Binding DownloadedOn}" />
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center"
                                       Margin="4,8,4,2">
                                <Button Height="30" Width="180" Command="{Binding NewFeatureFileCommand}">Add Feature</Button>
                                <Button Height="30" Width="180" Command="{Binding EditFeatureFileCommand}">Edit Selected Feature</Button>
                            </WrapPanel>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="PAD-US Help and Instructions" Grid.Row="2" Margin="4,0,4,4">
                        <wpf:MarkdownViewer Margin="4" Grid.Row="1" Markdown="{Binding GeoJsonFileOverviewMarkdown}" />
                    </GroupBox>
                    <local:FeatureFileEditorControl Grid.RowSpan="2" DataContext="{Binding FeatureFileToEdit}"></local:FeatureFileEditorControl>
                </Grid>
            </TabItem>
            <TabItem Header="Tag Settings">
                <StackPanel Margin="4">
                    <GroupBox Header="ExifTool">
                        <StackPanel Orientation="Vertical">
                            <TextBox Text="{Binding ExifToolFullName, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock TextWrapping="Wrap" Margin="4">This program writes tags to files using Phil Harvey's ExifTool - https://exiftool.org/. The recommended version of the program can be downloaded from https://oliverbetz.de/pages/Artikel/ExifTool-for-Windows - and the full path and filename must be entered above.</TextBlock>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Tag">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Vertical" Margin="4">
                                <StackPanel.Resources>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Margin" Value="4,8,4,4" />
                                    </Style>
                                </StackPanel.Resources>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding CreateBackups}">Create Backups</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">When Geolocation information is found for a file the original version will be copied into a backup directory.</TextBlock>
                                    <CheckBox Margin="24, 0,0,0" IsChecked="{Binding CreateBackupsInDefaultStorage}">Backup into My Documents</CheckBox>
                                    <TextBlock Margin="36,0,4,4" TextWrapping="Wrap">If this is checked backups will be written into a folder in My Documents - this keeps all backups in one place and doesn't add extra files into existing directories. If un-checked backups will be written to a folder under the file's current folder - this keeps the backups close to the original file.</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding TestRunOnly}">Test Run Only</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">Results will be shown but NO Geolocation will be written, use this to see what changes the program would make without changing any files.</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding TagsToLowerCase}">Tags to Lowercase</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">If selected all tags will be converted into lowercase. (Note that when de-duplicating tags the program uses a case insensitive comparison - converting tags to lower case is an aesthetic/data consistency option.)</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding SanitizeTags}">Sanitize Tags</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">This option will cause many characters to be eliminated from tags into a-z, 0-9 and a handful of other characters. This option offers a simple way to eliminate some inconsistencies in tags and   makes that tags URL\web friendly.</TextBlock>
                                </StackPanel>
                                <GroupBox Header="Manage Settings">
                                <StackPanel Orientation="Vertical" Margin="4">
                                        <TextBlock Margin="12,4,4,4" TextWrapping="Wrap">Save Settings: Settings are periodically saved by this program - most notably when you generate tags - you can use Save Settings at any time to ensure your changes are saved.</TextBlock>
                                        <TextBlock Margin="12,4,4,4" TextWrapping="Wrap">Import Settings: Use with care! This will overwrite all settings!</TextBlock>
                                        <TextBlock Margin="12,4,4,4" TextWrapping="Wrap">Export Settings: Use to create a file of settings that you can load later or use with the command line version of this program.</TextBlock>
                                    <WrapPanel Orientation="Horizontal" Margin="24,8,4,6">
                                        <WrapPanel.Resources>
                                            <Style TargetType="Button">
                                                <Setter Property="Width" Value="140"></Setter>
                                            </Style>
                                        </WrapPanel.Resources>
                                        <Button Command="{Binding SaveSettingsFromFileCommand}">Save Current Settings</Button>
                                        <Button Command="{Binding ImportSettingsFromFileCommand}">Import Settings</Button>
                                        <Button Command="{Binding ExportSettingsFromFileCommand}">Export Settings</Button>
                                        </WrapPanel>
                                </StackPanel>
                                </GroupBox>
                            </StackPanel>
                            <Button Command="{Binding TagFilesCommand}" Height="40" Margin="8">Tag</Button>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Result">
                <GroupBox Header="Tag Result">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="2" ItemsSource="{Binding LastResults}" CanUserAddRows="False"
                                  CanUserReorderColumns="true"
                                  CanUserDeleteRows="false" CanUserResizeColumns="true" CanUserResizeRows="false"
                                  CanUserSortColumns="true" AutoGenerateColumns="false" FrozenColumnCount="2"
                                  IsReadOnly="true">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileToTag.FullName}" />
                                <DataGridTextColumn Header="Result" Binding="{Binding Result}" />
                                <DataGridTextColumn Header="New Tags" Binding="{Binding NewTagsString}" />
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" />
                                <DataGridTextColumn Header="Final Tags" Binding="{Binding FinalTagString}" />
                                <DataGridTextColumn Header="Existing Tags" Binding="{Binding ExistingTagString}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem Header="Result Map">
                <wpf1:WebView2
                    Visibility="{Binding StatusContext.BlockUi, Converter={StaticResource BooleanNotToVisibility}}">
                    <b:Interaction.Behaviors>
                        <wpfHtml:WebViewHtmlStringBindingBehavior HtmlString="{Binding PreviewHtml}" />
                        <wpfHtml:WebViewPostJsonOnChangeBehavior JsonData="{Binding PreviewGeoJsonDto}" />
                    </b:Interaction.Behaviors>
                </wpf1:WebView2>
            </TabItem>
        </TabControl>
        <status:StatusControl DataContext="{Binding StatusContext}" />
    </Grid>
</Window>