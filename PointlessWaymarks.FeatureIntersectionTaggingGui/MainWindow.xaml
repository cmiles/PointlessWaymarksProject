<Window x:Class="PointlessWaymarks.FeatureIntersectionTaggingGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointlessWaymarks.FeatureIntersectionTaggingGui"
        xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
        xmlns:fileList="clr-namespace:PointlessWaymarks.WpfCommon.FileList;assembly=PointlessWaymarks.WpfCommon"
        xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        xmlns:wpf1="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:wpfHtml="clr-namespace:PointlessWaymarks.WpfCommon.WpfHtml;assembly=PointlessWaymarks.WpfCommon"
        xmlns:valueConverters="clr-namespace:PointlessWaymarks.WpfCommon.ValueConverters;assembly=PointlessWaymarks.WpfCommon"
        xmlns:utility="clr-namespace:PointlessWaymarks.WpfCommon.Utility;assembly=PointlessWaymarks.WpfCommon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance local:MainWindow}">
    <Window.Resources>
        <ResourceDictionary>
            <valueConverters:BooleanNotToVisibilityConverter x:Key="BooleanNotToVisibility" />
            <utility:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTab, Mode=TwoWay}">
            <TabItem Header="Files to Tag">
                <Grid Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Margin="4" HorizontalAlignment="Center" TextWrapping="Wrap">Use the buttons below to add all files in a Directory, all files in a Directory and all Subdirectories or to pick Files that will be compared to the GPX/location information in the previous tab. You can also delete items in the list below.</TextBlock>
                    <fileList:FileListControl DataContext="{Binding FilesToTagFileList}" Grid.Row="1" Margin="4" />
                </Grid>
            </TabItem>
            <TabItem Header="PAD-US">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Header="PAD-US Settings" Margin="4">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border Margin="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                <StackPanel Margin="4" Orientation="Vertical">
                                    <Label>PAD-US GeoJson Data Directory</Label>
                                    <TextBox Margin="4" Text="{Binding PadUsDirectory}" />
                                    <Button Margin="8" Command="{Binding ChoosePadUsDirectoryCommand}">Select PAD-US Directory</Button>
                                </StackPanel>
                            </Border>
                            <Border Margin="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2"
                                    Grid.Column="1">
                                <StackPanel Margin="4" Orientation="Vertical">
                                    <Label>Attributes for Tags</Label>
                                    <ListBox Margin="4" Height="80" ItemsSource="{Binding PadUsAttributes}"
                                             SelectedItem="{Binding SelectedPadUsAttribute}"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                                    <Grid Margin="2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock VerticalAlignment="Center" Text="{Binding .}"></TextBlock>
                                                        <Button VerticalContentAlignment="Center" Width="24"
                                                                VerticalAlignment="Center" Grid.Column="1"
                                                                Margin="12,0,0,0"
                                                                Command="{Binding Data.RemovePadUsAttributeCommand, Source={StaticResource Proxy}}"
                                                                CommandParameter="{Binding .}">
                                                            x
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Margin="4"
                                                 Text="{Binding PadUsAttributeToAdd, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Grid.Column="1" Margin="4" Command="{Binding AddPadUsAttributeCommand}">Add Attribute</Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="PAD-US Help and Instructions" Grid.Row="1" Margin="4,0,4,4">
                        <wpf:MarkdownViewer Margin="4" Grid.Row="1" Markdown="{Binding PadUsOverviewMarkdown}" />
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="GeoJson Feature Files">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Header="GeoJson Feature Files">
                        <ListBox ItemsSource="{Binding FeatureFiles}" SelectedItem="{Binding SelectedFeatureFile}" />
                    </GroupBox>
                    <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="4,6,4,10">
                        <Button Height="30" Width="180" Command="{Binding NewFeatureFileCommand}">Add Feature</Button>
                        <Button Height="30" Width="180" Command="{Binding EditFeatureFileCommand}">Edit Selected Feature</Button>
                    </WrapPanel>
                    <local:FeatureFileEditorControl Grid.RowSpan="2" DataContext="{Binding FeatureFileToEdit}"></local:FeatureFileEditorControl>
                </Grid>
            </TabItem>
            <TabItem Header="Tag Settings">
                <StackPanel Margin="4">
                    <GroupBox Header="ExifTool">
                        <StackPanel Orientation="Vertical">
                            <TextBox Text="{Binding ExifToolFullName, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock TextWrapping="Wrap" Margin="4">This program can write to a wider variety of file formats by using Phil Harvey's ExifTool - https://exiftool.org/. The recommended version of the program can be downloaded from https://oliverbetz.de/pages/Artikel/ExifTool-for-Windows - you must provide the full path and filename above for the program to use ExifTool.</TextBlock>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Tag">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Vertical" Margin="4">
                                <StackPanel.Resources>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Margin" Value="4,8,4,4" />
                                    </Style>
                                </StackPanel.Resources>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding CreateBackups}">Create Backups</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">When Geolocation information is found for a file the original version will be copied into a backup directory.</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding TestRunOnly}">Test Run Only</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">Results will be shown but NO Geolocation will be written, use this to see what changes the program would make without changing any files.</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding TagsToLowerCase}">Tags to Lowercase</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">If selected all tags will be converted into lowercase. (Note that when de-duplicating tags the program uses a case insensitive comparison - converting tags to lower case is an aesthetic/data consistency option.)</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding SanitizeTags}">Sanitize Tags</CheckBox>
                                    <TextBlock Margin="12,0,4,4" TextWrapping="Wrap">This option will cause many characters to be eliminated from tags into a-z, 0-9 and a handful of other characters. This option offers a simple way to eliminate some inconsistencies in tags and   makes that tags URL\web friendly.</TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <Button Command="{Binding TagCommand}" Height="40" Margin="8">Tag</Button>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Result">
                <GroupBox Header="Tag Result">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBox IsReadOnly="true" TextWrapping="Wrap"
                                 Text="{Binding LastTagOutput.Title, FallbackValue='No Results Generated'}" />
                        <TextBox Grid.Row="1" IsReadOnly="true" TextWrapping="Wrap"
                                 Text="{Binding LastTagOutput.Notes, FallbackValue=''}" />
                        <DataGrid Grid.Row="2" ItemsSource="{Binding LastTagOutput.FileResults}" CanUserAddRows="False"
                                  CanUserReorderColumns="true"
                                  CanUserDeleteRows="false" CanUserResizeColumns="true" CanUserResizeRows="false"
                                  CanUserSortColumns="true" AutoGenerateColumns="false" FrozenColumnCount="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" />
                                <DataGridTextColumn Header="Result" Binding="{Binding Result}" />
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" />
                                <DataGridTextColumn Header="Source" Binding="{Binding Source}" />
                                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude}" />
                                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem Header="Result Map">
                <wpf1:WebView2
                    Visibility="{Binding StatusContext.BlockUi, Converter={StaticResource BooleanNotToVisibility}}">
                    <b:Interaction.Behaviors>
                        <wpfHtml:WebViewHtmlStringBindingBehavior HtmlString="{Binding PreviewHtml}" />
                        <wpfHtml:WebViewPostJsonOnChangeBehavior JsonData="{Binding PreviewGeoJsonDto}" />
                    </b:Interaction.Behaviors>
                </wpf1:WebView2>
            </TabItem>
        </TabControl>
        <status:StatusControl DataContext="{Binding StatusContext}" />
    </Grid>
</Window>