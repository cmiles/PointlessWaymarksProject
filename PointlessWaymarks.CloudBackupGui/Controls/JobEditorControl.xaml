<UserControl x:Class="PointlessWaymarks.CloudBackupGui.Controls.JobEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PointlessWaymarks.CloudBackupGui.Controls"
             xmlns:stringDataEntry="clr-namespace:PointlessWaymarks.WpfCommon.StringDataEntry;assembly=PointlessWaymarks.WpfCommon"
             xmlns:conversionDataEntry="clr-namespace:PointlessWaymarks.WpfCommon.ConversionDataEntry;assembly=PointlessWaymarks.WpfCommon"
             xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
             xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.WpfCommon.WindowScreenShot;assembly=PointlessWaymarks.WpfCommon"
             xmlns:existingDirectoryDataEntry="clr-namespace:PointlessWaymarks.WpfCommon.ExistingDirectoryDataEntry;assembly=PointlessWaymarks.WpfCommon"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:JobEditorContext}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <stringDataEntry:StringDataEntryControl DataContext="{Binding UserNameEntry}" />
            <existingDirectoryDataEntry:ExistingDirectoryDataEntryControl
                DataContext="{Binding UserInitialDirectoryEntry}">
            </existingDirectoryDataEntry:ExistingDirectoryDataEntryControl>
            <stringDataEntry:StringDataEntryControl DataContext="{Binding UserCloudDirectoryEntry}" />
            <ListBox ItemsSource="{Binding ExcludedDirectories}" SelectedItem="{Binding SelectedExcludedDirectory}"
                     SelectionMode="Single" />
            <Button Command="{Binding AddExcludedDirectoryCommand}">Add Directory to Exclude</Button>
            <Button Command="{Binding RemoveSelectedExcludedDirectoryCommand}">Remove Directory to Exclude</Button>
            <ListBox ItemsSource="{Binding ExcludedDirectoryPatterns}"
                     SelectedItem="{Binding SelectedExcludedDirectoryPattern}" SelectionMode="Single" />
            <stringDataEntry:StringDataEntryControl DataContext="{Binding UserDirectoryPatternEntry}" />
            <Button Command="{Binding AddExcludedDirectoryPatternCommand}">Add Directory Pattern to Exclude</Button>
            <Button Command="{Binding RemoveSelectedExcludedDirectoryPatternCommand}">Remove Directory Pattern to Exclude</Button>
            <ListBox ItemsSource="{Binding ExcludedFilePatterns}" SelectedItem="{Binding SelectedExcludedFilePattern}"
                     SelectionMode="Single" />
            <stringDataEntry:StringDataEntryControl DataContext="{Binding UserFilePatternEntry}" />
            <Button Command="{Binding AddExcludedFilePatternCommand}">Add File Pattern to Exclude</Button>
            <Button Command="{Binding RemoveSelectedExcludedFilePatternCommand}">Remove File Pattern to Exclude</Button>
            <conversionDataEntry:ConversionDataEntryControl DataContext="{Binding UserMaximumRuntimeHoursEntry}" />
        </StackPanel>
    </Grid>
</UserControl>