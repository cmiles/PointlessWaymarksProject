<Window x:Class="PointlessWaymarks.PowershellRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointlessWaymarks.PowershellRunner"
        xmlns:controls="clr-namespace:PointlessWaymarks.PowershellRunnerGui.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance local:MainWindow }">
    <Grid>
        <TabControl>
            <TabItem Header="Custom Script">
                <controls:ScriptRunnerControl DataContext="{Binding ScriptRunnerContext}"></controls:ScriptRunnerControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>