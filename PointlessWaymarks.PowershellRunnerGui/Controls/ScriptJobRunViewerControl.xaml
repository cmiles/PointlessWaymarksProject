<UserControl x:Class="PointlessWaymarks.PowerShellRunnerGui.Controls.ScriptJobRunViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PointlessWaymarks.PowerShellRunnerGui.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:ScriptJobRunViewerContext}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PointlessWaymarks.WpfCommon;component/ClassicGreenResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}" Text="{Binding Job.Name, StringFormat='Job: {0}'}"></TextBox>
            <WrapPanel>
                <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}"
                         Text="{Binding Job.Description, StringFormat='Description: {0}'}">
                </TextBox>
                <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}"
                         Text="{Binding Job.Schedule, StringFormat='Schedule: {0}'}">
                </TextBox>
                <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}"
                         Text="{Binding StartedOnLocal, StringFormat='Started On: {0:G}'}">
                </TextBox>
                <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}"
                         Text="{Binding CompletedOnLocal, StringFormat='Completed: {0:G}'}">
                </TextBox>
                <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}"
                         Text="{Binding Run.Id, StringFormat='Job Id: {0}'}">
                </TextBox>
                <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}"
                         Text="{Binding Run.RunType, StringFormat='Run Type: {0}'}">
                </TextBox>
            </WrapPanel>
        </StackPanel>
        <Grid Grid.Row="1">
            <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}" AcceptsReturn="True" TextWrapping="Wrap"
                     Text="{Binding Run.Script}">
            </TextBox>
        </Grid>
        <Grid Grid.Row="2">
            <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}" AcceptsReturn="True" TextWrapping="Wrap"
                     Text="{Binding Run.Errors}">
            </TextBox>
        </Grid>
        <Grid Grid.Row="3">
            <TextBox Style="{StaticResource ReadOnlyTextBoxStyle}" AcceptsReturn="True" TextWrapping="Wrap"
                     Text="{Binding Run.Output}">
            </TextBox>
        </Grid>
    </Grid>

</UserControl>