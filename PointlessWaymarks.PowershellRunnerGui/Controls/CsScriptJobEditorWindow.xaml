<Window
    x:Class="PointlessWaymarks.PowerShellRunnerGui.Controls.CsScriptJobEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarks.PowerShellRunnerGui.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
    xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.WpfCommon.WindowScreenShot;assembly=PointlessWaymarks.WpfCommon"
    Title="C# Script Job Editor"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <local:CsScriptJobEditorControl DataContext="{Binding JobContext}" />
            <status:StatusControl
                Grid.Row="0"
                d:IsHidden="true"
                DataContext="{Binding StatusContext}" />
            <windowScreenShot:WindowScreenShotControl
                Width="40"
                Margin="2,2,2,6"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" />
        </Grid>
    </Grid>
</Window>
