<Window x:Class="PointlessWaymarks.CloudBackupEditorGui.Controls.ProgressTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointlessWaymarks.CloudBackupEditorGui.Controls"
        xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
        xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.WpfCommon.WindowScreenShot;assembly=PointlessWaymarks.WpfCommon"
        xmlns:controls="clr-namespace:PointlessWaymarks.CloudBackupEditorGui.Controls"
        mc:Ignorable="d"
        Title="{Binding JobName, StringFormat='Progress Window - {0}'}" Height="600" Width="800"
        d:DataContext="{d:DesignInstance local:ProgressTrackerWindow}">
    <Grid>
        <controls:ProgressTrackerControl Margin="4" DataContext="{Binding ProgressContext}"/>
        <status:StatusControl
            Grid.Row="0"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
        <windowScreenShot:WindowScreenShotControl
            Margin="2,2,2,6"
            Width="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />
    </Grid>
</Window>