<Window x:Class="PointlessWaymarks.WpfCommon.WpfHtml.WebViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointlessWaymarks.WpfCommon.WpfHtml"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="800" d:DataContext="{d:DesignInstance local:WebViewWindow}">
    <Grid>
        <wpf:WebView2>
            <b:Interaction.Behaviors>
                <local:WebViewHtmlStringBindingBehavior HtmlString="{Binding PreviewHtml}" />
                <local:WebViewPostJsonOnChangeBehavior JsonData="{Binding PreviewGeoJsonDto}" />
            </b:Interaction.Behaviors>
        </wpf:WebView2>
    </Grid>
</Window>
