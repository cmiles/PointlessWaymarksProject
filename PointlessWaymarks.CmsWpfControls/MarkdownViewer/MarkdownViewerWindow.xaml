<Window x:Class="PointlessWaymarks.CmsWpfControls.MarkdownViewer.MarkdownViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointlessWaymarks.CmsWpfControls.MarkdownViewer"
        xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="600" Width="600" d:DataContext="{d:DesignInstance local:MarkdownViewerWindow}">
    <Grid>
        <wpf:MarkdownViewer Markdown="{Binding MarkdownContent}" />
    </Grid>
</Window>
