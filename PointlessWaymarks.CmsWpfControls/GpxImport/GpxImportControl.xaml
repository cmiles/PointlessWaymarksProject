<UserControl x:Class="PointlessWaymarks.CmsWpfControls.GpxImport.GpxImportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PointlessWaymarks.CmsWpfControls.GpxImport"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:GpxImportContext}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="/PointlessWaymarks.WpfCommon;component/Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="GpxImportWaypointItemTemplate" DataType="local:GpxImportWaypoint">
                <Border Style="{StaticResource ContentListOuterBorderStyle}">
                    <StackPanel Orientation="Vertical">
                        <Label>Waypoint</Label>
                        <TextBlock Text="{Binding Waypoint.Name}"></TextBlock>
                        <CheckBox IsChecked="{Binding MarkedForImport}">Import</CheckBox>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GpxImportTrackItemTemplate" DataType="local:GpxImportTrack">
                <Border Style="{StaticResource ContentListOuterBorderStyle}">
                    <StackPanel Orientation="Vertical">
                        <Label>Track</Label>
                        <TextBlock Text="{Binding Track.Name}"></TextBlock>
                        <CheckBox IsChecked="{Binding MarkedForImport}">Import</CheckBox>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GpxImportRouteItemTemplate" DataType="local:GpxImportRoute">
                <Border Style="{StaticResource ContentListOuterBorderStyle}">
                    <StackPanel Orientation="Vertical">
                        <Label>Route</Label>
                        <TextBlock Text="{Binding Route.Name}"></TextBlock>
                        <CheckBox IsChecked="{Binding MarkedForImport}">Import</CheckBox>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <local:GpxImportDataTemplateSelector x:Key="GpxImportTemplateSelector"
                                                 WaypointImportTemplate="{StaticResource GpxImportWaypointItemTemplate}"
                                                 RouteImportTemplate="{StaticResource GpxImportRouteItemTemplate}"
                                                 TrackImportTemplate="{StaticResource GpxImportTrackItemTemplate}">
            </local:GpxImportDataTemplateSelector>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox
            Header="{Binding ImportFileName, StringFormat='Import Items From {0}'}"
            Style="{StaticResource UiComponentGroupBoxStyle}">
            <ListBox
                x:Name="GpxImportListBox"
                ItemTemplateSelector="{StaticResource GpxImportTemplateSelector}"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                SelectionChanged="Selector_OnSelectionChanged"
                Style="{StaticResource ContentListListBoxStyle}">
                <ListBox.ContextMenu>
                    <ContextMenu >
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </GroupBox>
        <Border Grid.Row="2" Style="{StaticResource ActionPanelBorderStyle}">
            <WrapPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Command="{Binding ChooseAndLoadFileCommand}"
                    Content="_Import"
                    Style="{StaticResource ActionPanelButtonStyle}" />
            </WrapPanel>
        </Border>
    </Grid>
</UserControl>