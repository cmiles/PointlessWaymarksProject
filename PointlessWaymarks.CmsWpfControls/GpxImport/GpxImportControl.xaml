<UserControl
    x:Class="PointlessWaymarks.CmsWpfControls.GpxImport.GpxImportControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarks.CmsWpfControls.GpxImport"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:wpfHtml="clr-namespace:PointlessWaymarks.CmsWpfControls.WpfHtml"
    xmlns:behaviors="clr-namespace:PointlessWaymarks.WpfCommon.Behaviors;assembly=PointlessWaymarks.WpfCommon"
    d:DataContext="{d:DesignInstance local:GpxImportContext}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="/PointlessWaymarks.WpfCommon;component/Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ImportWrapTextBlockItem" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,0,12,0" />
            </Style>
            <Style x:Key="ImportWrapContainer" TargetType="WrapPanel">
                <Setter Property="Margin" Value="0,6,0,0" />
            </Style>
            <Style x:Key="ImportImportChoiceContainer" TargetType="WrapPanel">
                <Setter Property="Margin" Value="6,12,0,12" />
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>
            <Style x:Key="ImportImportChoiceItem" TargetType="CheckBox">
                <Setter Property="Margin" Value="0,0,12,0" />
            </Style>
            <DataTemplate x:Key="GpxImportWaypointItemTemplate" DataType="local:GpxImportWaypoint">
                <Border Style="{StaticResource ContentListOuterBorderStyle}">
                    <Grid Style="{StaticResource ContentListOuterGridStyle}">
                        <StackPanel Margin="4" Orientation="Vertical">
                            <WrapPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource ImportWrapTextBlockItem}">Waypoint</TextBlock>
                                <TextBlock
                                    FontWeight="Bold"
                                    Style="{StaticResource ImportWrapTextBlockItem}"
                                    Text="{Binding Waypoint.Name}" />
                            </WrapPanel>
                            <TextBlock
                                Margin="0,6,0,0"
                                Text="{Binding Waypoint.Description}"
                                TextWrapping="Wrap"
                                Visibility="{Binding Waypoint.Description, Converter={StaticResource NullOrWhiteSpaceStringToCollapsed}}" />
                            <TextBlock
                                Text="{Binding Waypoint.Comment}"
                                TextWrapping="Wrap"
                                Visibility="{Binding Waypoint.Comment, Converter={StaticResource NullOrWhiteSpaceStringToCollapsed}}" />
                            <WrapPanel Style="{StaticResource ImportImportChoiceContainer}">
                                <CheckBox IsChecked="{Binding MarkedForImport}" Style="{StaticResource ImportImportChoiceItem}">
                                    Import
                                </CheckBox>
                                <CheckBox IsChecked="{Binding ReplaceElevationOnImport}" Style="{StaticResource ImportImportChoiceItem}">
                                    Replace Elevation on Import
                                </CheckBox>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GpxImportTrackItemTemplate" DataType="local:GpxImportTrack">
                <Border Style="{StaticResource ContentListOuterBorderStyle}">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}">Track</TextBlock>
                            <TextBlock
                                FontWeight="Bold"
                                Style="{StaticResource ImportWrapTextBlockItem}"
                                Text="{Binding Track.Name}" />
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding Statistics.Length, StringFormat='{}{0} Miles'}" />
                        </WrapPanel>
                        <TextBlock
                            Margin="0,6,0,0"
                            Text="{Binding Track.Description}"
                            TextWrapping="Wrap"
                            Visibility="{Binding Track.Description, Converter={StaticResource NullOrWhiteSpaceStringToCollapsed}}" />
                        <TextBlock
                            Text="{Binding Track.Comment}"
                            TextWrapping="Wrap"
                            Visibility="{Binding Track.Comment, Converter={StaticResource NullOrWhiteSpaceStringToCollapsed}}" />
                        <WrapPanel Orientation="Horizontal" Style="{StaticResource ImportWrapContainer}">
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding Statistics.MinimumElevation, StringFormat='{}{0} Min Elevation'}" />
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding Statistics.Length, StringFormat='{}{0} Max Elevation'}" />
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" Style="{StaticResource ImportWrapContainer}">
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding TrackInformation.StartsOn, StringFormat='Starts {0}'}" />
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding TrackInformation.EndsOn, StringFormat='Ends {0}'}" />
                        </WrapPanel>
                        <WrapPanel Style="{StaticResource ImportImportChoiceContainer}">
                            <CheckBox IsChecked="{Binding MarkedForImport}" Style="{StaticResource ImportImportChoiceItem}">
                                Import
                            </CheckBox>
                            <CheckBox IsChecked="{Binding ReplaceElevationOnImport}" Style="{StaticResource ImportImportChoiceItem}">
                                Replace Elevation on Import
                            </CheckBox>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GpxImportRouteItemTemplate" DataType="local:GpxImportRoute">
                <Border Style="{StaticResource ContentListOuterBorderStyle}">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}">Track</TextBlock>
                            <TextBlock
                                FontWeight="Bold"
                                Style="{StaticResource ImportWrapTextBlockItem}"
                                Text="{Binding Route.Name}" />
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding Statistics.Length, StringFormat='{}{0} Miles'}" />
                        </WrapPanel>
                        <TextBlock
                            Margin="0,6,0,0"
                            Text="{Binding Route.Description}"
                            TextWrapping="Wrap"
                            Visibility="{Binding Route.Description, Converter={StaticResource NullOrWhiteSpaceStringToCollapsed}}" />
                        <TextBlock
                            Text="{Binding Route.Comment}"
                            TextWrapping="Wrap"
                            Visibility="{Binding Route.Comment, Converter={StaticResource NullOrWhiteSpaceStringToCollapsed}}" />
                        <WrapPanel Orientation="Horizontal" Style="{StaticResource ImportWrapContainer}">
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding Statistics.MinimumElevation, StringFormat='{}{0} Min Elevation'}" />
                            <TextBlock Style="{StaticResource ImportWrapTextBlockItem}" Text="{Binding Statistics.Length, StringFormat='{}{0} Max Elevation'}" />
                        </WrapPanel>
                        <WrapPanel Style="{StaticResource ImportImportChoiceContainer}">
                            <CheckBox IsChecked="{Binding MarkedForImport}" Style="{StaticResource ImportImportChoiceItem}">
                                Import
                            </CheckBox>
                            <CheckBox IsChecked="{Binding ReplaceElevationOnImport}" Style="{StaticResource ImportImportChoiceItem}">
                                Replace Elevation on Import
                            </CheckBox>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <local:GpxImportDataTemplateSelector
                x:Key="GpxImportTemplateSelector"
                RouteImportTemplate="{StaticResource GpxImportRouteItemTemplate}"
                TrackImportTemplate="{StaticResource GpxImportTrackItemTemplate}"
                WaypointImportTemplate="{StaticResource GpxImportWaypointItemTemplate}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            VerticalAlignment="Stretch"
            Header="{Binding ImportFileName, StringFormat='Import Items From {0}'}"
            Style="{StaticResource UiComponentGroupBoxStyle}">
            <ListBox
                x:Name="GpxImportListBox"
                ItemTemplateSelector="{StaticResource GpxImportTemplateSelector}"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                SelectionChanged="Selector_OnSelectionChanged"
                Style="{StaticResource ContentListListBoxStyle}">
                <ListBox.ContextMenu>
                    <ContextMenu />
                </ListBox.ContextMenu>
            </ListBox>
        </GroupBox>
        <wpf:WebView2
            x:Name="GeoJsonContentWebView"
            Grid.Row="1"
            Visibility="{Binding StatusContext.BlockUi, Converter={StaticResource BooleanNotToVisibility}}"
        >
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="WebMessageReceived">
                    <behaviors:EventToCommand
                        Command="{Binding MapMessageReceivedCommand,
              Mode=OneWay}" PassEventArgsToCommand="True" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <b:Interaction.Behaviors>
                <wpfHtml:WebViewHtmlStringBindingBehavior HtmlString="{Binding PreviewHtml}" />
                <wpfHtml:WebViewPostJsonOnChangeBehavior JsonData="{Binding PreviewMapJsonDto}" />
            </b:Interaction.Behaviors>
        </wpf:WebView2>
        <Border Grid.Row="2" Style="{StaticResource ActionPanelBorderStyle}">
            <WrapPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Command="{Binding ChooseAndLoadFileCommand}"
                    Content="_Import"
                    Style="{StaticResource ActionPanelButtonStyle}" />
            </WrapPanel>
        </Border>
    </Grid>
</UserControl>