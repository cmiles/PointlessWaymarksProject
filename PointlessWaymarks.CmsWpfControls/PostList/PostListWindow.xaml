<Window
    x:Class="PointlessWaymarks.CmsWpfControls.PostList.PostListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarks.CmsWpfControls.PostList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    Width="1000"
    Height="750"
    d:DataContext="{d:DesignInstance local:PostListWindow}"
    mc:Ignorable="d">
    <Grid>
        <local:PostListWithActionsControl DataContext="{Binding ListContext}" />
    </Grid>
</Window>
