<Window
    x:Class="PointlessWaymarks.UtilitarianImageCombinerGui.Controls.WebPageAsJpegWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarks.UtilitarianImageCombinerGui.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
    xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.WpfCommon.WindowScreenShot;assembly=PointlessWaymarks.WpfCommon"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Save Web Page as Jpeg"
    Width="800"
    Height="450"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance local:WebPageAsJpegWindow}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PointlessWaymarks.WpfCommon;component/ClassicGreenResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Margin="4"
            BorderBrush="LightGray"
            BorderThickness="2"
            CornerRadius="4">
            <WrapPanel Margin="4">
                <Label Target="{Binding ElementName=UrlTextBox}">URL</Label>
                <TextBox
                    Name="UrlTextBox"
                    Width="360"
                    Margin="4,0,8,0"
                    Text="{Binding UserUrl, UpdateSourceTrigger=Explicit}"
                    AcceptsReturn="False"
                    TextAlignment="Left" 
                    KeyDown="UrlTextBox_KeyDown" />
                <Button Width="120" Command="{Binding SaveCurrentPageAsJpegCommand}">Save As Jpeg</Button>
            </WrapPanel>
        </Border>
        <Border
            Grid.Row="1"
            Margin="4,0,4,4"
            BorderBrush="LightGray"
            BorderThickness="2"
            CornerRadius="4">
            <wpf:WebView2
                x:Name="WebContentWebView"
                Margin="4"
                Source="{Binding UserUrl, TargetNullValue='about:blank'}"
                 />
        </Border>
        <windowScreenShot:WindowScreenShotControl
            Grid.Row="1"
            Grid.Column="0"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Bottom" />
        <status:StatusControl
            Grid.Row="0"
            Grid.RowSpan="2"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
    </Grid>
</Window>
